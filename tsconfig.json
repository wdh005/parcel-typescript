{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "es5",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*":["*"],
            "hooks/*": ["hooks/*"],
            "components/*": ["components/*"],
            "styles/*": ["styles/*"],
            "utils/*": ["utils/*"],
            "types/*": ["types/*"],
            "layouts/*": ["layouts/*"],
            "pages/*": ["pages/*"],
            "features/*": ["features/*"]
        }
    }
}
